// announcement-service/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- MODELS ---
model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  authorId  Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}