generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DayOfWeek {
    SENIN
    SELASA
    RABU
    KAMIS
    JUMAT
    SABTU
    MINGGU
}

model Class {
  id        Int        @id @default(autoincrement())
  name      String
  schedules Schedule[]
}

model Subject {
  id        Int        @id @default(autoincrement())
  name      String
  grade     Int // Menambahkan kembali kolom grade
  schedules Schedule[]
}

model User {
  id        Int        @id @default(autoincrement())
  fullName  String
  schedules Schedule[]
}

model Schedule {
  id        Int       @id @default(autoincrement())
  dayOfWeek DayOfWeek
  startTime String
  endTime   String
  classId   Int
  subjectId Int
  teacherId Int

  class     Class     @relation(fields: [classId], references: [id])
  subject   Subject   @relation(fields: [subjectId], references: [id])
  teacher   User      @relation(fields: [teacherId], references: [id])
}