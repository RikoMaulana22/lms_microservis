// services/5-admin-service/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // DATABASE_URL untuk Admin Service
}

enum NoteType {
  PELANGGARAN
  PRESTASI
  BIMBINGAN_KONSELING
  CATATAN_ORANG_TUA
}

enum LetterType {
  IZIN_SAKIT
  IZIN_ACARA
  PANGGILAN_ORANG_TUA
}

// PENINGKATAN: Enum baru untuk status surat
enum LetterStatus {
  PENDING
  APPROVED
  REJECTED
}

model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String   @db.Text
  updatedAt DateTime @updatedAt
}

// TAMBAHAN: Model Announcement yang hilang
model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  authorId  Int      // ID admin/guru dari User Service
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StudentNote {
  id        Int      @id @default(autoincrement())
  type      NoteType
  content   String   @db.Text
  date      DateTime @default(now())
  studentId Int      // ID dari User Service
  classId   Int      // ID dari Course Service
  authorId  Int      // ID dari User Service
}

model Letter {
  id        Int          @id @default(autoincrement())
  type      LetterType
  date      DateTime     @default(now())
  content   String       @db.Text
  status    LetterStatus @default(PENDING) // <-- PERUBAHAN DI SINI
  studentId Int?         // ID dari User Service
  classId   Int          // ID dari Course Service
}